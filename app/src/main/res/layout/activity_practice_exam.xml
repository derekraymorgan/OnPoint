<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="com.mystatscloud.onpoint.PracticeExamActivity">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="Practice Exam"
		android:id="@+id/PracticeExamTitle"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="20sp"
		android:layout_gravity="center_horizontal"/>

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/questionImage"
		android:layout_below="@+id/PracticeExamTitle"
		android:layout_centerHorizontal="true"
		android:contentDescription="Question Asset"
		android:background="#c6c6c6"
		android:layout_marginBottom="15sp"
		android:src="@drawable/q6"
		android:layout_gravity="center_horizontal"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="Medium Text"
		android:id="@+id/questionText"
		android:layout_below="@+id/questionImage"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="15sp"
		android:layout_gravity="center_horizontal"/>

	<ListView
		android:layout_width="wrap_content"
		android:layout_height="181dp"
		android:id="@+id/answerListView"
		android:layout_below="@+id/questionText"
		android:layout_centerHorizontal="true"
		tools:listitem="@android:layout/simple_list_item_single_choice"
		android:choiceMode="singleChoice"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Submit Answer"
		android:id="@+id/submitAnswerButton"
		android:layout_below="@+id/answerListView"
		android:layout_centerHorizontal="true"
		android:onClick="submitAnswer"
		android:launchMode = "singleInstance"
		android:layout_gravity="center_horizontal"/>

</LinearLayout>
