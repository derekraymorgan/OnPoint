<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/testimonial_row"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/testimonial_topHalfOfRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/testimonial_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="10dp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/testimonial_description"
            android:textSize="@dimen/abc_text_size_small_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/testimonial_image"
            android:paddingRight="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Test testimonial describing how awesome the On Point mobile application is."/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/testimonial_bottomHalfOfRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_below="@id/testimonial_topHalfOfRow">

        <TextView
            android:id="@+id/testimonial_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingRight="10dp"
            android:text="12/1/15"/>

        <TextView
            android:id="@+id/testimonial_author"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/testimonial_date"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingRight="10dp"
            android:text="-Test Author"/>



    </RelativeLayout>

</RelativeLayout>