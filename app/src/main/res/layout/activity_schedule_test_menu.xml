<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mystatscloud.onpoint.ScheduleTestMenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/titleSize"
        android:textColor="@color/DBlue"
        android:typeface="serif"
        android:text="Method of Contact"
        android:id="@+id/prompt"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Scheduler by Phone"
        android:id="@+id/phoneButton"
        android:layout_gravity="center"
        android:onClick="phoneContact" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Scheduler by Filling a Form"
        android:id="@+id/formButton"
        android:onClick="formContact"
        android:layout_gravity="center" />
</LinearLayout>