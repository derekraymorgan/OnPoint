<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="com.mystatscloud.onpoint.MainActivity"
	android:background="@drawable/bg_gears"
	android:touchscreenBlocksFocus="true">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_marginTop="50sp">

		<Button
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="About"
			android:id="@+id/aboutButton"
			android:layout_gravity="center_horizontal"
			android:clickable="true"/>

		<Button
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Frequently asked questions"
			android:id="@+id/faqButton"
			android:layout_gravity="center_horizontal"
			android:clickable="true"
			android:focusable="false"/>

		<Button
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Resources"
			android:id="@+id/resourcesButton"
			android:layout_gravity="center_horizontal"
			android:clickable="true"
			android:focusable="false"/>

		<Button
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Testimonials"
			android:id="@+id/testimonialsButton"
			android:layout_gravity="center_horizontal"
			android:clickable="true"
			android:focusable="false"/>

		<Button
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Test Facility Locator"
			android:id="@+id/testFacilityLocatorButton"
			android:layout_gravity="center_horizontal"
			android:clickable="true"
			android:focusable="false"/>

		<Button
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Practice Exam"
			android:id="@+id/practiceExamButton"
			android:layout_gravity="center_horizontal"
			android:clickable="true"
			android:focusable="false"/>

		<Button
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Shedule a test"
			android:id="@+id/testSceduleButton"
			android:layout_gravity="center_horizontal"
			android:clickable="true"
			android:focusable="false"/>
	</LinearLayout>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="OnPoint"
		android:id="@+id/MenuTitle"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:textColor="#ffffff"
		android:textSize="30sp"/>

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/menuLogo"
		android:layout_below="@+id/MenuTitle"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="43dp"/>

</RelativeLayout>
