<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="com.mystatscloud.onpoint.PracticeExamMenuActivity"
	android:background="#333333">

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/imageView7"
		android:scaleType="fitXY"
		android:src="@drawable/engineering"
		android:contentDescription="engineering_image"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#f4f4f4"
		android:layout_gravity="center"
		android:layout_marginTop="100dp"
		android:layout_marginBottom="100dp"
		android:layout_marginRight="50dp"
		android:layout_marginLeft="50dp">

		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="Select a Test Type"
			android:id="@+id/textView12"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
			android:layout_marginBottom="20sp"
			android:gravity="center"/>

		<Button
			style="?android:attr/buttonStyleSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Skill Level Test"
			android:id="@+id/skillLevelButton"
			android:layout_below="@+id/textView12"
			android:layout_centerHorizontal="true"
			android:onClick="showSkillTestView"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="Test questions are all the same skill level but from every ACT NCRC test category."
			android:id="@+id/textView13"
			android:layout_below="@+id/skillLevelButton"
			android:layout_centerHorizontal="true"
			android:autoText="false"
			android:layout_marginBottom="20sp"
			android:layout_marginLeft="5sp"
			android:layout_marginTop="5sp"
			android:layout_marginRight="5sp"
			android:gravity="center"
			android:layout_margin="15sp"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Category Based Test"
			android:id="@+id/CategoryTestButton"
			android:layout_below="@+id/textView13"
			android:layout_centerHorizontal="true"
			android:onClick="showCategoryTestView"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="Test questions vary in skill level but will be generated from the same category(applied mathematics, locating information, etc.)"
			android:id="@+id/textView14"
			android:layout_below="@+id/CategoryTestButton"
			android:layout_centerHorizontal="true"
			android:layout_margin="15sp"
			android:gravity="center"/>
	</RelativeLayout>

</RelativeLayout>
